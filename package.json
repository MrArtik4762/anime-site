{
  "name": "anime-site",
  "version": "1.0.0",
  "description": "Полнофункциональный аниме-сайт с современным адаптивным дизайном",
  "main": "server/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "dev:all": "docker-compose -f docker-compose.dev.yml up --build",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "build:all": "npm run build:server && npm run build",
    "test": "concurrently \"cd server && npm test\" \"cd client && npm test\"",
    "test:server": "cd server && npm test",
    "test:client": "cd client && npm test",
    "install:all": "npm --prefix server install && npm --prefix client install",
    "lint": "npm --prefix server run lint && npm --prefix client run lint",
    "lint:server": "cd server && npm run lint",
    "lint:client": "cd client && npm run lint",
    "fix-all": "cd client && npm run fix-all",
    "clean:all": "npm run clean:server && npm run clean:client",
    "clean:server": "cd server && rm -rf node_modules dist",
    "clean:client": "cd client && rm -rf node_modules build",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:prod": "docker-compose up --build",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "anime",
    "react",
    "nodejs",
    "mongodb",
    "video-streaming",
    "responsive-design"
  ],
  "author": "Anime Site Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0",
    "eslint": "^8.57.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "react-player": "^3.3.1",
    "tailwindcss": "^3.4.0"
  }
}
