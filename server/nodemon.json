{
  "watch": [
    "."
  ],
  "ext": "js,json",
  "ignore": [
    "node_modules/",
    "tests/",
    "coverage/",
    "uploads/",
    "*.test.js",
    "*.spec.js"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "delay": "1000",
  "verbose": true,
  "restartable": "rs",
  "colours": true,
  "legacyWatch": false
}