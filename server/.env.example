# Server Configuration
NODE_ENV=development
PORT=5000

# Database
# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/anime-site

# PostgreSQL Configuration (alternative)
DATABASE_URL=postgresql://username:password@localhost:5432/anime-site
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=anime-site

# Test Database
DATABASE_TEST_URL=postgresql://username:password@localhost:5432/anime-site-test
DB_TEST_HOST=localhost
DB_TEST_PORT=5432
DB_TEST_USER=postgres
DB_TEST_PASSWORD=password
DB_TEST_NAME=anime-site-test

# Database SSL (for production)
DB_SSL=true

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=30d
JWT_REFRESH_SECRET=your-refresh-token-secret-here
JWT_REFRESH_EXPIRE=7d

# External APIs
MAL_CLIENT_ID=your-myanimelist-client-id
MAL_CLIENT_SECRET=your-myanimelist-client-secret

ANILIST_CLIENT_ID=your-anilist-client-id
ANILIST_CLIENT_SECRET=your-anilist-client-secret

KITSU_API_KEY=your-kitsu-api-key

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Email Configuration (for password reset)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CLIENT_URL=http://localhost:3000

# Socket.io
SOCKET_CORS_ORIGIN=http://localhost:3000

# AniLiberty API Configuration
ANILIBERTY_API_KEY=your-aniliberty-api-key
ANILIBERTY_API_BASE=https://anilibria.top/api
ANILIB_API_BASE=https://anilibria.top/api

# Episode API Configuration
EPISODE_API_TIMEOUT=15000
EPISODE_CACHE_TTL=300
EPISODE_MAX_RETRIES=2

# Proxy Configuration
PROXY_WHITELIST=anilibria.top,cdn.anilibria.top
PROXY_TIMEOUT_MS=30000
CORS_ALLOW_ORIGIN=http://localhost:3000

# Server Configuration
SERVER_USER_AGENT=anime-site-proxy/1.0
CLIENT_URL=http://localhost:3000