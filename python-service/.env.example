# Конфигурация Python-сервиса AnidLapi
FASTAPI_ENV=development
LOG_LEVEL=info

# Настройки сервера
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Настройки кэширования
CACHE_TTL=3600
CACHE_CLEANUP_INTERVAL=300

# Настройки rate limiting
RATE_LIMIT=100/minute

# Настройки Prometheus метрик
METRICS_PORT=8001
ENABLE_METRICS=true

# Настройки Anilibria fallback
ANILIBRIA_API_URL=https://api.anilibria.tv/v3
ANILIBRIA_CDN_URL=https://cache.libria.fun

# Настройки Redis (опционально)
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# Настройки безопасности
CORS_ORIGINS=*
CORS_CREDENTIALS=true

# Настройки логирования
LOG_FORMAT=json
LOG_FILE=/app/logs/anidlapi.log