# ==============================================
# ОСНОВНЫЕ НАСТРОЙКИ ОКРУЖЕНИЯ
# ==============================================
NODE_ENV=production
CLIENT_URL=http://localhost

# ==============================================
# БЕЗОПАСНОСТЬ
# ==============================================
# ВАЖНО: Измените эти секреты в продакшене!
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRE=30d
JWT_REFRESH_SECRET=your-refresh-token-secret-change-in-production-min-32-chars
JWT_REFRESH_EXPIRE=7d

# ==============================================
# БАЗА ДАННЫХ
# ==============================================
MONGO_PASSWORD=secure-mongo-password-change-in-production

# ==============================================
# ОГРАНИЧЕНИЯ И ПРОИЗВОДИТЕЛЬНОСТЬ
# ==============================================
MAX_FILE_SIZE=5242880
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# ВНЕШНИЕ API (ОПЦИОНАЛЬНО)
# ==============================================
# MyAnimeList API
MAL_CLIENT_ID=
MAL_CLIENT_SECRET=

# AniList API
ANILIST_CLIENT_ID=
ANILIST_CLIENT_SECRET=

# Kitsu API
KITSU_API_KEY=

# ==============================================
# EMAIL КОНФИГУРАЦИЯ (ОПЦИОНАЛЬНО)
# ==============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=

# ==============================================
# МОНИТОРИНГ (ОПЦИОНАЛЬНО)
# ==============================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=secure-grafana-password-change-in-production

# ==============================================
# SSL/TLS (ДЛЯ ПРОДАКШЕНА)
# ==============================================
# Раскомментируйте для HTTPS
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem